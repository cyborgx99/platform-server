// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum Role {
  USER
  TEACHER
  ADMIN
}

enum TransactionType {
  MISSED
  CONDUCTED
  PAYMENT
}

model User {
  id String @id @default(uuid())
  email String  @unique
  name  String?
  lastName String?
  password String
  role    Role     @default(USER)
  resetToken String?
  transactions Transaction[]
  classrooms Classroom[]
  lessonImages LessonImage[]
  lessonContents LessonContent[]
  lessons Lesson[]
  createdAt DateTime @default(now())

}

model Transaction {
  id String @id @default(uuid())
  user   User @relation(fields: [userId], references: [id])
  userId String
  amount Int
  type   TransactionType
  date  DateTime
}

model LessonImage {
  id       String  @id @default(uuid())
  url      String
  publicId String?
  title    String
  pages    LessonPage[]
  user     User @relation(fields: [userId], references: [id])
  userId   String
}


model LessonContent {
  id        String  @id @default(uuid())
  title     String
  sentences String //JSON String
  pages     LessonPage[]
  user      User @relation(fields: [userId], references: [id])
  userId    String
}

model Lesson {
  id          String @id @default(uuid())
  title       String
  description String
  pages       LessonPage[]
  classrooms  Classroom[]
  user        User @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
}


model LessonPage {
  id         String @id @default(uuid())

  lessonImage LessonImage @relation(fields: [lessonImageId], references: [id])
  lessonImageId String

  lessonContent LessonContent @relation(fields: [lessonContentId], references: [id])
  lessonContentId String

  lesson Lesson @relation(fields: [lessonId], references: [id])
  lessonId String
}




model Classroom {
  id        String @id @default(uuid())
  user      User @relation(fields: [userId], references: [id])
  userId    String 
  lesson    Lesson @relation(fields: [lessonId], references: [id])
  lessonId  String
  notes     String?
  createdAt DateTime @default(now())
}